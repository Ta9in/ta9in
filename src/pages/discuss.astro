---
import "../styles/global.css";
---

<!doctype html>
<html lang="ar" dir="rtl">
    <head>
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"
        />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="ناقش فكرتك مع تَقِن - للزبائن وحاملي المشاريع"
        />
        <title>ناقش فكرتك | تَقِن</title>
        <script is:inline src="https://tally.so/widgets/embed.js" async
        ></script>
        <style is:inline>
            html,
            body {
                margin: 0;
                height: 100%;
                overflow: hidden;
                background: var(--color-bg);
            }
            .form-container {
                position: absolute;
                top: 0;
                right: 0;
                bottom: 0;
                left: 0;
            }
            .form-container iframe {
                border: 0;
                width: 100%;
                height: 100%;
            }
            .back-home {
                position: fixed;
                top: 1rem;
                right: 1rem;
                z-index: 100;
                display: flex;
                align-items: center;
                gap: 0.5rem;
                padding: 0.5rem 1rem;
                background: var(--color-bg);
                border: 1px solid var(--color-border);
                border-radius: 8px;
                text-decoration: none;
                color: var(--color-text);
                font-family: var(--font-title);
                font-size: 0.875rem;
                transition: border-color 0.2s;
            }
            .back-home:hover {
                border-color: var(--color-text);
            }
            .back-home svg {
                width: 16px;
                height: 16px;
            }
        </style>
    </head>
    <body>
        <a href="/" class="back-home">
            <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
            >
                <path d="M19 12H5M12 19l-7-7 7-7"></path>
            </svg>
            العودة للرئيسية
        </a>
        <div class="form-container">
            <iframe
                data-tally-src="https://tally.so/r/Ek5vgX?transparentBackground=1&formEventsForwarding=1"
                width="100%"
                height="100%"
                frameborder="0"
                marginheight="0"
                marginwidth="0"
                title="ناقش فكرتك"></iframe>
        </div>
    </body>
</html>
