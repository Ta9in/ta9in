---
import BaseLayout from "./BaseLayout.astro";

interface Props {
    pageTitle: string;
    description?: string;
}

const { pageTitle, description } = Astro.props;
---

<BaseLayout
    pageTitle={pageTitle}
    description={description}
    lang="ar"
    dir="rtl"
    viewport="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"
>
    <Fragment slot="head">
        <script is:inline src="https://tally.so/widgets/embed.js" async
        ></script>
    </Fragment>

    <style is:global>
        html,
        body {
            margin: 0;
            height: 100%;
            overflow: hidden;
            background: var(--color-bg);
        }
        .form-container {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
        }
        .form-container iframe {
            border: 0;
            width: 100%;
            height: 100%;
        }
        .back-home {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 100;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: var(--color-bg);
            border: 1px solid var(--color-border);
            border-radius: 8px;
            text-decoration: none;
            color: var(--color-text);
            font-family: var(--font-title);
            font-size: 0.875rem;
            transition: border-color 0.2s;
        }
        .back-home:hover {
            border-color: var(--color-text);
        }
        .back-home svg {
            width: 16px;
            height: 16px;
        }
    </style>

    <a href="/" class="back-home">
        <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
        >
            <path d="M19 12H5M12 19l-7-7 7-7"></path>
        </svg>
        العودة للرئيسية
    </a>

    <slot />
</BaseLayout>
