---
import BaseLayout from "./BaseLayout.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
    pageTitle: string;
    description?: string;
}

const { pageTitle, description } = Astro.props;
---

<BaseLayout
    pageTitle={pageTitle}
    description={description}
    lang="ar"
    dir="rtl"
    viewport="width=device-width, initial-scale=1.0"
>
    <ViewTransitions slot="head" />

    <style is:global>
        /* Home page specific styles - prevent scrolling */
        html,
        body {
            height: 100%;
            overflow: hidden;
        }
    </style>

    <div class="home-layout">
        <slot />
    </div>
</BaseLayout>
