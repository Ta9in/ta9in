---
import BaseLayout from "./BaseLayout.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
    title: string;
    number: string;
}

const { title, number } = Astro.props;
---

<BaseLayout
    pageTitle={`${title} | تَقِن`}
    lang="ar"
    dir="rtl"
    bodyClass="manifesto-page"
>
    <ViewTransitions slot="head" />

    <main class="manifesto-content">
        <a href="/" class="back-link">
            <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
            >
                <path d="M19 12H5M12 19l-7-7 7-7"></path>
            </svg>
            العودة للرئيسية
        </a>

        <header class="mb-8">
            <span class="text-sm text-gray-500 block mb-2">{number}.</span>
            <h1
                class="text-3xl md:text-4xl font-bold leading-tight"
                style={`view-transition-name: manifesto-title-${number}; font-family: var(--font-title);`}
            >
                {title}
            </h1>
        </header>

        <article class="prose">
            <slot />
        </article>
    </main>
</BaseLayout>
